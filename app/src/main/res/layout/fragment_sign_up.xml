<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5FFFFFF"
    android:padding="10dp"
    tools:context=".activities.sign_in_fragments.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fields">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/input_field_sign_u"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:hint="@string/full_name"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            app:helperTextTextColor="#F4364C"
            app:helperText="Required">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:id="@+id/sign_up_name"
                android:textColor="@color/black"
                android:background="@drawable/shape3"/>




        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/input_field_sign_up"
            android:layout_below="@id/input_field_sign_u"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:hint="@string/email_address"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            app:helperTextTextColor="#F4364C"
            app:helperText="Required">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:id="@+id/sign_up_email"
                android:textColor="@color/black"
                android:background="@drawable/shape3"/>




        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/phone_number"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:hint="@string/phone_no"
            android:layout_below="@id/input_field_sign_up"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            app:helperTextTextColor="#F4364C"
            app:helperText="Required">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:id="@+id/sign_up_phone_number"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/shape3"/>




        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/age_restriction"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="140dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/age_18"
            android:textColor="@color/black" />


        <CheckBox
            android:id="@+id/policies"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_restriction"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="40dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/terms"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/sendNewSignUpLink"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/policies"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/darker_lavender"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/send_link_in_mail"
            android:textColor="@color/white" />


    </RelativeLayout>

</ScrollView>