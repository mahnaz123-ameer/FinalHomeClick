<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    android:padding="20dp"
    tools:context=".activities.sign_in_fragments.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/input_field_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="top"
                android:padding="5dp"
                android:text="@string/full_name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sign_up_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:autofillHints="@string/full_name"
                android:background="@drawable/shape"
                android:fontFamily="@font/comfortaa_regular"
                android:inputType="text"
                android:labelFor="@id/sign_up_name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_field_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_field_1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/email"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sign_up_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:autofillHints="@string/email"
                android:background="@drawable/shape"
                android:fontFamily="@font/comfortaa_regular"
                android:inputType="textEmailAddress"
                android:labelFor="@id/sign_up_email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/input_field_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_field_2"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/sign_up_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:autofillHints="@string/phone_number"
                android:background="@drawable/shape"
                android:fontFamily="@font/comfortaa_regular"
                android:inputType="phone"
                android:labelFor="@id/sign_up_phone_number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />


        </LinearLayout>


        <CheckBox
            android:id="@+id/age_restriction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_field_3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/age_18"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/policies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_restriction"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/terms"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/sendNewSignUpLink"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/policies"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/darker_lavender"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/send_link_in_mail"
            android:textColor="@color/white" />


    </RelativeLayout>

</ScrollView>