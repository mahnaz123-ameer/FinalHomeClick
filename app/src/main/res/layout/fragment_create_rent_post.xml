<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5FFFFFF"
    tools:context=".activities.create_post.CreateRentPostFragment"
    android:padding="30dp">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/area_name"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/rentAreaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape3"
                android:padding="8dp"
                android:textColor="@color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/full_address"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/rentFullAddress"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/shape3"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:textColor="@color/black" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tenant_type"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rdTenant"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rbFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="Family"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbSinglePerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="Student / Working person"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Bedrooms"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="0dp"/>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="42dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:background="@drawable/circle"
                android:id="@+id/decrease_bedrooms"
                />

            <EditText
                android:id="@+id/rentBedrooms"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:textSize="13dp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="0dp"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="13dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_bedrooms"
                />


        </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent">

         </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Bathrooms"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/decrease_bathrooms"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/rentBathrooms"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="13dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="+"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_bathrooms"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/balconies"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/decrease_balconies"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:textSize="20dp" />




            <EditText
                android:id="@+id/rentBalconies"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape3"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:textSize="13dp"
                android:padding="8dp"
                android:textColor="@color/black" />


            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="+"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_balconies"
                />



        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Floor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Floor No"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentFloor"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Floor"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape3"
                android:hint="Floor No"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="13dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/FloorSpace"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/Floor"
                android:text="Floor Space"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentFloorSpace"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Floor"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/rentFloor"
                android:background="@drawable/shape3"
                android:hint="Floor Space"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="13dp"
                android:textColor="@color/black" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Indoor Features"
            android:textColor="@color/darker_lavender"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/rentGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/gas_availability"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <CheckBox
                android:id="@+id/rentGenerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Generator"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10dp"/>



        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Outdoor Features"
            android:textColor="@color/darker_lavender"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/rentElevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Elevator"
                android:textColor="@color/black"
                android:textSize="13sp" />




            <CheckBox
                android:id="@+id/rentGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Garage Space"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/rentSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Security Guard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Rent Rate"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/shape3"
                android:hint="per month"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textColorHint="#807A7A" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/utility"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentUtilityCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="13dp"
                android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Available From"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <CalendarView
                android:id="@+id/rentAvailableFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape3"
                android:backgroundTint="#454345"
                android:clickable="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Description"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rentDescription"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape3"
                android:padding="8dp"
                android:textSize="13dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:verticalScrollbarPosition="right" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/select_rent"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/darker_lavender"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:text="Add photos to post" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_rent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageRecView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"

                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/prevPhotoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageRecView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Previously Added Photos"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/previouslyAddedImageRecView"

                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/prevPhotoTextView"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/buttonRentPostAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:backgroundTint="@color/darker_lavender"
            android:background="@drawable/shape3"
            android:padding="2dp"
            android:textSize="15dp"
            android:text="Post My Ad" />

    </LinearLayout>



</ScrollView>