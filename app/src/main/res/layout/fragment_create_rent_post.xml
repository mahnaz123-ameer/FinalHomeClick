<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    tools:context=".activities.create_post.CreateRentPostFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Area Name"
                    android:inputType="text"

                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentAreaName"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Full Address"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentFullAddress"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Bedrooms"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentBedrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Bathrooms"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentBathrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Balconies"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentBalconies"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Floor"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentFloor"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Gas Availability"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Available"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/rentGas"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Elevator"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Available"
                    android:id="@+id/rentElevator"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Generator"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Available"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:buttonTint="@color/black"
                    android:id="@+id/rentGenerator"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Garage Space"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Available"
                    android:id="@+id/rentGarage"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:buttonTint="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Security Guard"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Available"
                    android:id="@+id/rentSecurity"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/black"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Rent Rate"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentPayment"
                    android:inputType="number"
                    android:padding="8dp"
                    android:hint="per month"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Utility"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentUtilityCharge"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Tenant Type"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <RadioGroup
                    android:id="@+id/rdTenant"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family"
                        android:id="@+id/rbFamily"
                        android:textColor="@color/black"
                        android:buttonTint="@color/black"
                        android:textSize="18sp"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student / Working person"
                        android:id="@+id/rbSinglePerson"
                        android:buttonTint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Available From"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <CalendarView
                    android:id="@+id/rentAvailableFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#454345"
                    android:clickable="true"
                    android:background="@drawable/shape"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rentDescription"
                    android:padding="8dp"
                    android:background="@drawable/shape"
                    android:verticalScrollbarPosition="right"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/buttonRentPostAd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:inputType="textMultiLine"
                android:backgroundTint="@color/black"
                android:text="Post My Ad" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>