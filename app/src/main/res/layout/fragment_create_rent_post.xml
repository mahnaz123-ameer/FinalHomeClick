<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5FFFFFF"
    tools:context=".activities.create_post.CreateRentPostFragment"
    android:padding="30sp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="@string/area_name"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10sp"/>

            <EditText
                android:id="@+id/rentAreaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/shape3"
                android:padding="8sp"
                android:textColor="@color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:text="@string/full_address"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_marginTop="10sp"/>

                        <EditText
                            android:id="@+id/rentFullAddress"
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            android:textAlignment="textStart"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="10sp"
                            android:background="@drawable/shape3"
                            android:inputType="textMultiLine"
                            android:padding="8sp"
                            android:textColor="@color/black" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tenant_type"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rdTenant"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp">

                <RadioButton
                    android:id="@+id/rbFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="Family"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbSinglePerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="Student / Working person"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="Bedrooms"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="0sp"/>

            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="0sp"
                android:layout_marginLeft="42sp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:background="@drawable/circle"
                android:id="@+id/decrease_bedrooms"
                />

            <EditText
                android:id="@+id/rentBedrooms"
                android:layout_width="60sp"
                android:layout_height="30sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="2sp"
                android:textSize="13sp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8sp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="0sp"
                android:text="+"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="13sp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_bedrooms"
                />


        </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent">

         </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="Bathrooms"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="5sp"/>

            <Button
                android:id="@+id/decrease_bathrooms"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rentBathrooms"
                android:layout_width="60sp"
                android:layout_height="30sp"
                android:textSize="13sp"
                android:layout_marginStart="14sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8sp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="10sp"
                android:text="+"
                android:textSize="13sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_bathrooms"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="@string/balconies"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/decrease_balconies"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:text="-"
                android:textSize="20sp" />




            <EditText
                android:id="@+id/rentBalconies"
                android:layout_width="60sp"
                android:layout_height="30sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/shape3"
                android:layout_marginTop="8sp"
                android:inputType="number"
                android:textSize="13sp"
                android:padding="8sp"
                android:textColor="@color/black" />


            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="10sp"
                android:text="+"
                android:textSize="13sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/increase_balconies"
                />



        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Floor"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:text="Floor No"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentFloor"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Floor"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shape3"
                android:hint="Floor No"
                android:inputType="number"
                android:padding="8sp"
                android:textSize="13sp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/FloorSpace"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="57sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/Floor"
                android:text="Floor Space"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentFloorSpace"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Floor"
                android:layout_marginLeft="21sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@+id/rentFloor"
                android:background="@drawable/shape3"
                android:hint="Floor Space"
                android:inputType="number"
                android:padding="8sp"
                android:textSize="13sp"
                android:textColor="@color/black" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Indoor Features"
            android:textColor="@color/darker_lavender"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/rentGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/gas_availability"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <CheckBox
                android:id="@+id/rentGenerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Generator"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="10sp"/>



        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Outdoor Features"
            android:textColor="@color/darker_lavender"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/rentElevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Elevator"
                android:textColor="@color/black"
                android:textSize="13sp" />




            <CheckBox
                android:id="@+id/rentGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Garage Space"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67sp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/rentSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Security Guard"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="Rent Rate"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="10sp"

                android:background="@drawable/shape3"
                android:hint="per month"
                android:inputType="number"
                android:padding="8sp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textColorHint="#807A7A" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="@string/utility"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/rentUtilityCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/shape3"
                android:inputType="number"
                android:padding="8sp"
                android:textSize="13sp"
                android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Available From"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <CalendarView
                android:id="@+id/rentAvailableFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/shape3"
                android:backgroundTint="#454345"
                android:clickable="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="Description"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rentDescription"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shape3"
                android:padding="8sp"
                android:textSize="13sp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:verticalScrollbarPosition="right" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/select_rent"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/darker_lavender"
                android:layout_width="wrap_content"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:textSize="15sp"
                android:text="Add photos to post" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_rent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageRecView"
                    android:layout_width="match_parent"
                    android:layout_height="350sp"

                    android:layout_marginTop="20sp" />

                <TextView
                    android:id="@+id/prevPhotoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageRecView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:text="Previously Added Photos"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/previouslyAddedImageRecView"

                    android:layout_width="match_parent"
                    android:layout_height="350sp"
                    android:layout_below="@id/prevPhotoTextView"
                    android:layout_marginTop="20sp"
                    android:visibility="gone" />

            </RelativeLayout>




        </RelativeLayout>



            <Button
                android:id="@+id/buttonRentPostAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190sp"
                android:backgroundTint="@color/darker_lavender"
                android:background="@drawable/shape3"
                android:padding="2sp"
                android:layout_marginBottom="30sp"
                android:textSize="15sp"
                android:text="Post" />



    </LinearLayout>

    </ScrollView>

</FrameLayout>