<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:backgroundTint="@color/white"
    android:elevation="5sp"
    android:padding="30sp"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <RelativeLayout
            android:id="@+id/top_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:padding="10sp"
                android:layout_marginTop="15sp"
                android:src="@drawable/icon_location"
                android:background="@drawable/circle"/>


            <TextView
                android:id="@+id/card_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"
                android:layout_toRightOf="@id/icon_location"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Area Name"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_full_address"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_area_name"
                android:layout_marginLeft="14sp"
                android:layout_marginTop="0sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@id/icon_location"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Full address"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/card_ad_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Sale"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_box"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp">

            <ImageView
                android:id="@+id/icon_bedroom"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/icon_bedroom" />

            <TextView
                android:id="@+id/card_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/icon_bedroom"
                android:text="2"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/icon_bathroom"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_below="@id/icon_bedroom"
                android:layout_marginTop="15sp"
                android:src="@drawable/icon_bathroom" />


            <TextView
                android:id="@+id/card_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_bedroom"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/icon_bathroom"
                android:text="1"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_box"
            android:layout_marginTop="20sp"
            android:layout_marginStart="80sp"
            android:layout_toRightOf="@id/left_box">

            <ImageView
                android:id="@+id/icon_gas"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/gas_icon" />

            <TextView
                android:id="@+id/card_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_toRightOf="@id/icon_gas"
                android:text="Available"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/icon_money"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_below="@id/icon_gas"
                android:layout_marginTop="15sp"
                android:src="@drawable/icon_money_mahnaz" />

            <TextView
                android:id="@+id/card_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_gas"
                android:layout_marginStart="10sp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/icon_money"
                android:text="18000 BDT"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
