<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.create_post.CreateSalePostFragment"
    android:background="@color/white"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Area Name"
                android:textColor="@color/black"
                android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleAreaName"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Full Address"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleFullAddress"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Property Condition"
                    android:textColor="@color/darker_lavender"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/saleSituation"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="New"
                        android:id="@+id/rbNew"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Established"
                        android:id="@+id/rbEstablished"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Bedrooms"

                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="42dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="+"
                    android:background="@drawable/circle"
                    android:id="@+id/increase_bedrooms"
                    />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleBedrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>


                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/decrease_bedrooms"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Bathrooms"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/increase_bathrooms"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="42dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="+"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleBathrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textSize="20dp"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/decrease_bathrooms"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Balconies"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/increase_balconies"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="42dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="+"
                    android:textSize="20dp" />


                <EditText
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleBalconies"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textSize="20dp"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/decrease_balconies"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Floor No "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/floor_no"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleFloor"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    android:layout_below="@+id/floor_no"/>

                <TextView
                    android:id="@+id/floorSpace"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="71dp"
                    android:layout_toRightOf="@id/floor_no"
                    android:text="Floor Space"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/saleFloorSpace"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/floor_no"
                    android:layout_marginLeft="21dp"

                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/saleFloor"
                    android:background="@drawable/shape3"
                    android:hint="Floor Space"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/black" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Indoor Features"
                android:textColor="@color/darker_lavender"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/saleGas"
                    android:buttonTint="@color/black"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Gas Availability"
                    android:textColor="@color/black"
                    android:textSize="18sp" />



                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/saleElevator"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Elevator"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Outdoor Features"
                android:textColor="@color/darker_lavender"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">



                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/saleGenerator"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Generator"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>




                <CheckBox
                    android:id="@+id/saleSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Security Guard"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/saleGarage"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Garage Space"
                    android:textColor="@color/black"
                    android:textSize="18sp" />





            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Asking Amount"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/salePayment"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/saleDescription"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    />

            <Button
                android:id="@+id/select_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/darker_lavender"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:text="Add photos to post" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_sale">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/saleImageRecView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"

                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/prevPhotoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/saleImageRecView"
                    android:text="Previously Added Photos"
                    android:textColor = "@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/previouslyAddedSaleImageRecView"

                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/prevPhotoTextView"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    />

            </RelativeLayout>




            <Button
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:background="@drawable/shape3"
                android:padding="5dp"
                android:backgroundTint="@color/darker_lavender"
                android:id="@+id/buttonSalePostAd"
                android:text="Post My Ad"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>