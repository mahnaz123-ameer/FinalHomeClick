<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.create_post.CreateSalePostFragment"
    android:background="#D5FFFFFF"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/area_name"
                android:textColor="@color/black"
                android:textSize="13sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleAreaName"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/full_address"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleFullAddress"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/property_condition"
                    android:textColor="@color/darker_lavender"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/saleSituation"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:scrollbarSize="13dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="@string/_new"
                        android:id="@+id/rbNew"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="@string/established"
                        android:id="@+id/rbEstablished"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/bedrooms"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/decrease_bedrooms"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="@string/_s"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleBedrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>





                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="@string/_a"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/increase_bedrooms"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/bathrooms"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
                <Button
                    android:id="@+id/decrease_bathrooms"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="@string/_s"
                    android:textSize="13sp" />

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleBathrooms"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="@string/_a"
                    android:textSize="13sp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/increase_bathrooms"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/balconies"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/decrease_balconies"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/darker_lavender"
                    android:text="@string/_s"
                    android:textSize="13sp" />


                <EditText
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleBalconies"
                    android:inputType="number"
                    android:padding="8dp"
                    android:background="@drawable/shape3"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="@string/_a"
                    android:textSize="13sp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/darker_lavender"
                    android:id="@+id/increase_balconies"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/floor_no"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:id="@+id/floor_no"/>

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleFloor"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    android:layout_below="@+id/floor_no"/>

                <TextView
                    android:id="@+id/floorSpace"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="46dp"
                    android:layout_toEndOf="@id/floor_no"
                    android:text="@string/floor_space"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/saleFloorSpace"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/floor_no"
                    android:layout_marginStart="21dp"
                    android:textSize="13sp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/saleFloor"
                    android:background="@drawable/shape3"
                    android:hint="@string/floor_space"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/black" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/indoor_features"
                android:textColor="@color/darker_lavender"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:id="@+id/saleGas"
                    android:buttonTint="@color/black"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/gas_availability"
                    android:textColor="@color/black"
                    android:textSize="13sp" />



                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/saleElevator"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="15dp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/elevator"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/outdoor_features"
                android:textColor="@color/darker_lavender"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">



                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:textSize="13sp"
                    android:id="@+id/saleGenerator"
                    android:layout_marginStart="10dp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/generator"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>




                <CheckBox
                    android:id="@+id/saleSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/security_guard"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <CheckBox android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/saleGarage"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/black"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/garage_space"
                    android:textColor="@color/black"
                    android:textSize="13sp" />





            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/asking_amount"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:id="@+id/salePayment"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/description"
                    android:textColor="@color/darker_lavender"
                    android:textSize="13sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/saleDescription"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:background="@drawable/shape3"
                    android:textColor="@color/black"
                    />

            <Button
                android:id="@+id/select_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/darker_lavender"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginStart="120dp"
                android:text="@string/add_photos_to_post"
                tools:ignore="ObsoleteLayoutParam" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_sale"
                tools:ignore="ObsoleteLayoutParam">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/saleImageRecView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"

                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/prevPhotoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/saleImageRecView"
                    android:text="@string/previously_added_photos"
                    android:textColor = "@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/previouslyAddedSaleImageRecView"

                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/prevPhotoTextView"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sale location"
                android:textColor="@color/black"
                android:id="@+id/sale_location"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sale_add_location"
                android:textColor="@color/black"
                android:text="add location"/>


            <Button
                android:id="@+id/buttonSalePostAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/darker_lavender"
                android:padding="5dp"
                android:text="@string/post" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>