<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    android:padding="20dp"
    tools:context=".activities.sign_in_fragments.SignInFragment">


    <LinearLayout
        android:id="@+id/input_field_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/comfortaa_regular"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:autofillHints="@string/email"
            android:background="@drawable/shape"
            android:fontFamily="@font/comfortaa_regular"
            android:inputType="textEmailAddress"
            android:labelFor="@id/editEmail"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


    </LinearLayout>


    <Button
        android:id="@+id/sendSignInLink"
        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_field_sign_in"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/darker_lavender"
        android:fontFamily="@font/comfortaa_regular"
        android:gravity="center"
        android:text="@string/send_link_in_mail"
        android:textColor="@color/white" />


</RelativeLayout>