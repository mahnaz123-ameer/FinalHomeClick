<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:padding="10dp"
    tools:context=".activities.profile_fragments.ProfileInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_profile"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/profile_name_edit"
                android:text="nashmin nawar"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_email"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/profile_phone_edit"
                android:text="nnnawar@gmail.com"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_phone"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/profile_email"
                android:text="01715048076"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>