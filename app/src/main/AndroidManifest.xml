<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csedu.homeclick.androidhomeclick">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/home_click"
        android:label="@string/app_name"
        android:roundIcon="@drawable/home_click"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activities.ShowAdvertisementDetails"></activity>

        <activity
            android:name=".activities.Filter"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.CreatePost"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.UserSignIn"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.AdFeed">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>